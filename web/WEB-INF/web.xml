<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <error-page>
        <error-code>404</error-code>
        <location>/errorpage_404.jsp</location>
    </error-page>
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>filter.SessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/cpanel/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>admin.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFlightHandler</servlet-name>
        <servlet-class>admin.AddFlightHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelFlightHandler</servlet-name>
        <servlet-class>admin.CancelFlightHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservationHandler</servlet-name>
        <servlet-class>user.ReservationHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>admin.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancellationHandler</servlet-name>
        <servlet-class>user.CancellationHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactHandler</servlet-name>
        <servlet-class>user.ContactHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFlightHandler</servlet-name>
        <url-pattern>/cpanel/addflighthandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelFlightHandler</servlet-name>
        <url-pattern>/cpanel/cancelflighthandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservationHandler</servlet-name>
        <url-pattern>/reservationhandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/cpanel/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancellationHandler</servlet-name>
        <url-pattern>/cancellationhandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactHandler</servlet-name>
        <url-pattern>/contacthandler</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
